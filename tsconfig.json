{
  "extends": ["./src/domain/tsconfig/tsconfig.node.json"],
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "rootDir": ".",
    "types": ["eslint-plugin-tsdoc", "node"]
  },
  "include": ["src"],
  "exclude": [
    "prettier.config.js", "node_modules", "dist",
    "eslint.config"
  ]
}
