{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Kurocado Studio React tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "rootDir": "./src",
    "target": "ES5"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tailwind.config.ts"]
}
