{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Kurocado Studio Remix tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "rootDir": "./app",
    "target": "ES5",
    "types": ["@types/node", "@types/lodash-es"]
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "tailwind.config.ts"]
}
