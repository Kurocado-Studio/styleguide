{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "noEmit": false
  },
  "display": "Kurocado Studio Remix tsconfig",
  "extends": "./tsconfig.json",
  "include": [
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "app",
    "tailwind.config.ts"
  ]
}
