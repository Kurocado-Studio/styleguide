{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "noEmit": true,
    "resolveJsonModule": true
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
  },
  "include": [
    "remix.env.d.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
